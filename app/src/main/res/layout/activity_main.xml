<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/home_page"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_marginBottom="50dp"
        android:text="@string/home_page"
        app:layout_constraintBottom_toTopOf="@+id/timer_page"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        android:onClick="onClick"/>

    <Button
        android:id="@+id/timer_page"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_marginBottom="50dp"
        android:text="@string/timer_page"
        app:layout_constraintBottom_toTopOf="@+id/edit_page"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        android:onClick="onClick"/>

    <Button
        android:id="@+id/edit_page"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_marginBottom="50dp"
        android:text="@string/edit_page"
        app:layout_constraintBottom_toTopOf="@+id/settings_page"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        android:onClick="onClick"/>

    <Button
        android:id="@+id/settings_page"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_marginBottom="208dp"
        android:text="@string/settings_page"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        android:onClick="onClick"/>
</androidx.constraintlayout.widget.ConstraintLayout>